<h1>Burger Time</h1>

<div class="left">
    <h2>Ready to Eat!</h2>
    <ul class="uneaten">
        {{#each burgers}}
            {{#unless devoured}}
                <p>{{burger_name}}</p>
            {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="right">
    <h2>Devoured</h2>
    <ul class="eaten">
        {{#each burgers}}
            {{#if devoured}}
                <p>{{burger_name}}</p>
            {{/if}}
        {{/each}}
    </ul>
</div>