<h1>Burger Time</h1>

<div class="container">
    <div class="left">
        <h2>Ready to Eat!</h2>
        <ul class="uneaten">
            {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button class="devour" data-id="{{id}}" data-devoured="{{devoured}}">Devour</button>
                </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="right">
        <h2>Devoured</h2>
        <ul class="eaten">
            {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="form">
    <form class="newBurg">

    <div class="form-group">
        <label>Order a Burger</label>
        <input type="text" id="burg" name="burger_name">
    </div>

    <button type="submit">Submit</button>
    </form>
</div>